<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".HomeActivity">

    <!-- ImageView pequeño -->
    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="57dp"
        android:layout_height="54dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/s3" />

    <!-- TextView "Lotify" -->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-medium"
        android:text="Lotify"
        android:textColor="#8BC34A"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- TextView "Control de Lotes" -->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="52dp"
        android:text="Control de Lotes"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView5" />

    <!-- TextView email -->
    <TextView
        android:id="@+id/emaillTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:visibility="invisible"
        />

    <!-- TextView provider -->
    <TextView
        android:id="@+id/providerrTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emaillTextView"
        android:visibility="invisible"
        />

    <!-- ImageView con la captura -->
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="482dp"
        android:layout_height="27dp"
        android:layout_marginTop="88dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/captura_de_pantalla_2024_05_29_190234" />

    <!-- RecyclerView para los lotes -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintBottom_toTopOf="@+id/buttonsLayout" />

    <!-- LinearLayout para los botones en la parte inferior -->
    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="417dp"
        android:layout_height="206dp"
        android:layout_marginBottom="4dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="-3dp">

        <!-- Botón "+" (button2) -->

        <!-- Botón Perfil (button4) -->

        <Button
            android:id="@+id/button2"
            android:layout_width="69dp"
            android:layout_height="64dp"
            android:text="+"
            android:textAlignment="center"
            android:textSize="48sp" />

        <!-- Botón Cerrar sesión (logoutButton) -->

        <Button
            android:id="@+id/button4"
            android:layout_width="383dp"
            android:layout_height="wrap_content"
            android:text="Perfil"
            android:textSize="24sp" />

        <Button
            android:id="@+id/logoutButton"
            android:layout_width="382dp"
            android:layout_height="wrap_content"
            android:text="Cerrar sesión"
            android:textSize="24sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


