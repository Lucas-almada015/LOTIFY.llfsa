<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    tools:context=".HomeActivity">

    <!-- Botones de perfil y logout -->
    <Button
        android:id="@+id/button4"
        style="@style/BaseButtonStyle"
        android:layout_marginEnd="5dp"
        android:text="Perfil"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toStartOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.64"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintWidth_percent="0.28" />

    <Button
        android:id="@+id/logoutButton"
        style="@style/BaseButtonStyle"
        android:text="Cerrar"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintWidth_percent="0.28" />

    <!-- Título de la App -->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-black"
        android:text="Lotify"
        android:textColor="@color/verde"
        android:textSize="43sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Icono de búsqueda -->
    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="32dp"
        android:layout_height="33dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.914"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@id/logoutButton"
        app:srcCompat="@drawable/lupa" />

    <!-- Descripción de la App -->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Control de Lotes"
        android:textColor="@color/colorSeparator"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button4" />

    <!-- Información adicional (invisible en diseño) -->
    <TextView
        android:id="@+id/emaillTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="16sp"
        tools:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView4" />

    <TextView
        android:id="@+id/providerrTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textSize="16sp"
        tools:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emaillTextView" />

    <!-- Separador de contenido -->
    <View
        android:id="@+id/separator"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="@color/verde"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView4"
        app:layout_constraintWidth_percent="0.97" />

    <!-- Lista de lotes -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/separator" />

    <!-- Botón flotante de acción -->
    <Button
        android:id="@+id/button2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/verde"
        android:gravity="center"
        android:text="+"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/recyclerView"
        app:layout_constraintEnd_toEndOf="parent" />

        tools:layout_editor_absoluteX="-3dp">

        <!-- Botón "+" (button2) -->

        <!-- Botón Perfil (button4) -->

        <Button
            android:id="@+id/button2"
            android:layout_width="69dp"
            android:layout_height="64dp"
            android:text="+"
            android:textAlignment="center"
            android:textSize="48sp" />

        <!-- Botón Cerrar sesión (logoutButton) -->

        <Button
            android:id="@+id/button4"
            android:layout_width="383dp"
            android:layout_height="wrap_content"
            android:text="Perfil"
            android:textSize="24sp" />

        <Button
            android:id="@+id/logoutButton"
            android:layout_width="382dp"
            android:layout_height="wrap_content"
            android:text="Cerrar sesión"
            android:textSize="24sp" />

    </LinearLayout>


    <Button
        android:id="@+id/updateButton"
        android:layout_width="113dp"
        android:layout_height="49dp"
        android:text="Actualizar"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="13dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
